{
  "name": "@arpinum/config",
  "version": "2.1.2",
  "description": "Simple module to read configuration from env variables",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "tslint": "tslint --fix 'lib/**/*.ts'",
    "jest": "jest --verbose",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc",
    "test": "run-s -c compile jest tslint",
    "prebuild": "rm -rf ./build",
    "build": "tsc -p ./tsconfig.prod.json",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-config.git",
  "keywords": [
    "configuration",
    "12 factor",
    "env",
    "variable",
    "Arpinum"
  ],
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/node": "13.9.3",
    "jest": "25.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.8.1",
    "tslint": "6.1.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "/lib/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ]
  }
}
